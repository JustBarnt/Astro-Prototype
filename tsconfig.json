{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "preserveValueImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@utilities/*": [
        "src/scripts/utilities/*"
      ],
      "@scripts/*": [
        "src/scripts/*"
      ]
    }
  },
  "exclude": [
    "node_modules/*",
    "dist/*"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/**/*.astro",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}